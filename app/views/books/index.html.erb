<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<%= form_tag({:action=>"search"}, {:method=>"GET"}) do %>
  <%= text_field_tag "search[title]", value = @value %>
  <%= submit_tag "検索" %>
  <%= link_to "リセット", books_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>Isbn</th>
      <th>Title</th>
      <th>Price</th>
      <th>Publish</th>
      <th>Published</th>
      <th>Cd</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>日本</td>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.price %></td>
        <td><%= book.publish %></td>
        <td><%= book.published %></td>
        <td><%= book.cd %></td>
        <td><%= link_to 'Show', reviews_path %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm:"「#{book.title}」を削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

